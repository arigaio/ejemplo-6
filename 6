#include <stdio.h>
#include <stdlib.h>

void main()
{
FILE *archivo;
int res;
char caracteres[50];
archivo= fopen("prueba.txt","w");
if (archivo != NULL)
{
    printf("Desea ingresar una cadena de caracteres? Si:1 No:0:");
    scanf("%d",&res);
    while(res)
{
fflush(stdin);
puts("Cadena:");
gets(caracteres);
fputs(caracteres,archivo);
printf("Desea ingresar otra cadena de caracteres? Si:1 No:0:");
scanf("%d",&res);
if(res)
fputs("\n",archivo);
/*"Se indica un salto de linea, excepto en la última cadena. Si no se hiciera esta
indicación, la función puts pegaría las cadenas y tendríamos dificultades en el
momento de leerlas. Por otra parte si realizáramos este salto de línea al final de la
última cadena en la escritura se repetiría la última cadena*/
}
fclose(archivo);
}
else
printf("No se puede abrir el fichero \n");
}
